@model ShortenURL.Domain.ShortLink

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Link";
}

<h2>Edit Link</h2>

@if (TempData["Error"] != null)
{
    <div style="color:red; margin-bottom:15px;">
        @TempData["Error"]
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div style="margin-bottom:15px;">
        <label>Original URL</label><br />
        <input type="text"
               name="originalUrl"
               value="@Model.OriginalUrl"
               style="width:400px;"
               required />
    </div>

    <button type="submit" class="btn btn-primary">
        Save
    </button>

    <a asp-action="Index" class="btn">
        Cancel
    </a>
</form>
