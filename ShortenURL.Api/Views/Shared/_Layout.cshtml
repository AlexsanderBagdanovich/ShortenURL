@{
    var title = ViewData["Title"] as string ?? "ShortenURL";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - ShortenURL</title>

    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
            background-color: #f5f5f5;
        }

        header {
            background-color: #222;
            padding: 12px 24px;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                margin-right: 15px;
            }

                .navbar a:hover {
                    text-decoration: underline;
                }

        .container {
            max-width: 1000px;
            margin: 30px auto;
            background: white;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

            table th, table td {
                padding: 8px;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #f0f0f0;
                text-align: left;
            }

        .btn {
            padding: 4px 8px;
            border: 1px solid #444;
            background: #eee;
            cursor: pointer;
            text-decoration: none;
            color: black;
            font-size: 13px;
        }

        .btn-primary {
            background-color: #1976d2;
            color: white;
            border: none;
        }

        .btn-danger {
            background-color: #d32f2f;
            color: white;
            border: none;
        }

        .btn:hover {
            opacity: 0.9;
        }

        footer {
            text-align: center;
            margin: 20px 0;
            color: #777;
            font-size: 13px;
        }
    </style>
</head>

<body>

    <header>
        <div class="navbar">
            <a asp-controller="Links" asp-action="Index">
                <strong>ShortenURL</strong>
            </a>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        © @DateTime.Now.Year ShortenURL
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
